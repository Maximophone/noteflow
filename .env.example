# NoteFlow Environment Variables
# Copy this file to .env and fill in your API keys

# AssemblyAI (for audio transcription)
ASSEMBLY_AI_KEY=your_assemblyai_key_here

# Discord (for speaker identification notifications)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# AI Models (used by ai_core package)
GOOGLE_API_KEY=your_google_gemini_key_here
ANTHROPIC_API_KEY=your_anthropic_claude_key_here
OPENAI_API_KEY=your_openai_key_here

# Integrations
CODA_API_KEY=your_coda_key_here
NOTION_API_KEY=your_notion_key_here

# Optional: Custom paths (defaults to Google Drive paths)
# NOTEFLOW_PATH=/path/to/your/noteflow/data
# OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
